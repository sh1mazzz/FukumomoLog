<%- if controller_name != 'sessions' %>
  <p><%= link_to t("devise.links.log_in"), new_session_path(resource_name), class: "font-semibold text-amber-700 hover:text-amber-900" %></p>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <p><%= link_to t("devise.links.sign_up"), new_registration_path(resource_name), class: "font-semibold text-amber-700 hover:text-amber-900" %></p>
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <p><%= link_to t("devise.links.forgot_password"), new_password_path(resource_name), class: "font-semibold text-amber-700 hover:text-amber-900" %></p>
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <p><%= link_to t("devise.links.confirmation_instructions"), new_confirmation_path(resource_name), class: "font-semibold text-amber-700 hover:text-amber-900" %></p>
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <p><%= link_to t("devise.links.unlock_instructions"), new_unlock_path(resource_name), class: "font-semibold text-amber-700 hover:text-amber-900" %></p>
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <p><%= button_to t("devise.links.omniauth_sign_in", provider: OmniAuth::Utils.camelize(provider)), omniauth_authorize_path(resource_name, provider), data: { turbo: false }, class: "mt-2 inline-flex items-center justify-center rounded-full border border-amber-500 px-4 py-2 text-sm font-semibold text-amber-700 hover:bg-amber-50" %></p>
  <% end %>
<% end %>
