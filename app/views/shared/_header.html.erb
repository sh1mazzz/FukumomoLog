<header class="mx-auto flex w-full max-w-5xl items-center justify-between px-6 py-6">
  <div class="flex items-center">
    <%= image_tag "logo.png", alt: "Fukumomo Log", class: "h-22 w-auto" %>
  </div>
  <nav class="flex items-center gap-3 text-sm">
    <% if user_signed_in? %>
      <%= link_to "ログアウト", destroy_user_session_path, data: { turbo_method: :delete }, class: "rounded-full border border-amber-600 px-4 py-2 text-amber-700 hover:bg-amber-100" %>
    <% else %>
      <%= link_to "新規登録", new_user_registration_path, class: "rounded-full border border-amber-600 px-4 py-2 text-amber-700 hover:bg-amber-100" %>
      <%= link_to "ログイン", new_user_session_path, class: "rounded-full bg-amber-600 px-4 py-2 text-white hover:bg-amber-700" %>
    <% end %>
  </nav>
</header>
