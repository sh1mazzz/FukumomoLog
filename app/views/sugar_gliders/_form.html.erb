<%= form_with model: sugar_glider, url: sugar_glider_path, local: true, html: { class: "mt-6 space-y-6" } do |f| %>
  <%= render "shared/form_errors", object: sugar_glider %>

  <div>
    <%= f.label :name, class: "text-sm font-semibold text-gray-700" %>
    <%= f.text_field :name,
          class: "mt-2 w-full rounded-xl border border-gray-200 bg-white px-4 py-3 text-sm shadow-sm focus:border-amber-500 focus:ring-2 focus:ring-amber-200" %>
  </div>

  <div>
    <%= f.label :gender, class: "text-sm font-semibold text-gray-700" %>
    <%= f.select :gender, sugar_glider_gender_options, {},
          class: "mt-2 w-full rounded-xl border border-gray-200 bg-white px-4 py-3 text-sm shadow-sm focus:border-amber-500 focus:ring-2 focus:ring-amber-200" %>
  </div>

  <div>
    <%= f.label :birthday, class: "text-sm font-semibold text-gray-700" %>
    <%= f.date_field :birthday,
          class: "mt-2 w-full rounded-xl border border-gray-200 bg-white px-4 py-3 text-sm shadow-sm focus:border-amber-500 focus:ring-2 focus:ring-amber-200" %>
  </div>

  <div>
    <%= f.label :weight, class: "text-sm font-semibold text-gray-700" %>
    <%= f.number_field :weight, step: 0.1,
          placeholder: "例：95.0",
          class: "mt-2 w-full rounded-xl border border-gray-200 bg-white px-4 py-3 text-sm shadow-sm focus:border-amber-500 focus:ring-2 focus:ring-amber-200" %>
    <p class="mt-1 text-xs text-gray-500">小数1桁までOK</p>
  </div>

  <div class="pt-2">
    <%= f.submit t("sugar_gliders.form.submit"),
          class: "inline-flex w-full items-center justify-center rounded-full bg-amber-500 px-6 py-3 text-sm font-semibold text-white shadow-sm transition hover:bg-amber-600" %>
  </div>
<% end %>
