<% content_for :title, t("daily_records.index.title") %>

<section class="rounded-3xl bg-white px-8 py-10 shadow-sm">
  <div class="flex flex-wrap items-center justify-between gap-4">
    <h1 class="mt-3 text-3xl font-bold leading-tight"><%= t("daily_records.index.title") %></h1>
  </div>

  <!-- 検索BOX -->
  <div data-controller="attention-modal" class="mt-6 mx-auto max-w-xs rounded-2xl border border-amber-100 bg-amber-50/40 px-4 py-4 text-left">
    <!-- チェックボックスを揃えるための透明セクション -->
    <div class="mx-auto w-fit">
      <%= form_with url: daily_records_path, method: :get, local: true, class: "space-y-4 text-sm" do %>
        <div class="space-y-2">
          <label class="flex w-full items-center justify-start gap-2">
            <%= check_box_tag :food_attention, "1", params[:food_attention] == "1" %>
            <span><%= t("daily_records.index.search.food_attention") %></span>
          </label>
          <label class="flex w-full items-center justify-start gap-2">
            <%= check_box_tag :excretion_attention, "1", params[:excretion_attention] == "1" %>
            <span><%= t("daily_records.index.search.excretion_attention") %></span>
          </label>
          <label class="flex w-full items-center justify-start gap-2">
            <%= check_box_tag :abnormal_attention, "1", params[:abnormal_attention] == "1" %>
            <span><%= t("daily_records.index.search.abnormal_attention") %></span>
          </label>
        </div>

        <div class="relative w-full text-center">
          <%= submit_tag t("daily_records.index.search.submit"),
              class: "rounded-full bg-amber-500 px-6 py-2 text-white hover:bg-amber-600" %>

          <!-- インフォメーションマーク -->
          <button type="button" data-action="attention-modal#open" aria-label="<%= t("daily_records.index.attention_modal.open") %>" class="absolute right-0 top-1/2 inline-flex h-6 w-6 -translate-y-1/2 items-center justify-center text-amber-700 hover:text-amber-800">
            <svg class="h-5 w-5" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
              <path stroke="none" d="M0 0h24v24H0z"/>
              <circle cx="12" cy="12" r="9" />
              <line x1="12" y1="8" x2="12.01" y2="8" />
              <path d="M11 12h1v4h1" />
            </svg>
          </button>
        </div>
      <% end %>
    </div>

    <!-- 注意モーダル -->
    <%= render "attention_modal" %>
  </div>

  <!-- 記録一覧 -->
  <% if @daily_records.any? %>
    <div class="mt-8 overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200 text-sm">
        <thead class="bg-amber-50 text-left text-xs font-semibold uppercase tracking-wide text-gray-500">
          <tr>
            <th class="px-4 py-3"><%= t("daily_records.index.table.headers.date") %></th>
            <th class="px-4 py-3"><%= t("daily_records.index.table.headers.food") %></th>
            <th class="px-4 py-3"><%= t("daily_records.index.table.headers.excretion") %></th>
            <th class="px-4 py-3"><%= t("daily_records.index.table.headers.abnormal") %></th>
            <th class="px-4 py-3"><%= t("daily_records.index.table.headers.memo") %></th>
            <th class="px-4 py-3 text-center"><%= t("daily_records.index.table.headers.action") %></th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-100 bg-white text-gray-700">
          <% @daily_records.each do |record| %>
            <tr class="hover:bg-amber-50/40">
              <td class="whitespace-nowrap px-4 py-3"><%= l(record.record_date) %></td>
              <td class="px-4 py-3"><%= record.food_attention? ? t("daily_records.index.table.attention") : t("daily_records.index.table.normal") %></td>
              <td class="px-4 py-3"><%= record.excretion_attention? ? t("daily_records.index.table.attention") : t("daily_records.index.table.normal") %></td>
              <td class="px-4 py-3"><%= record.abnormal_attention? ? t("daily_records.index.table.attention") : t("daily_records.index.table.normal") %></td>
              <td class="px-4 py-3"><%= record.memo.presence || "-" %></td>
              <td class="px-4 py-3">
                <div class="flex items-center justify-center gap-3 text-gray-300">
                  <%= link_to edit_daily_record_path(record),
                        aria: { label: t("daily_records.index.table.actions.edit") },
                        class: "inline-flex h-8 w-8 items-center justify-center rounded-full border border-gray-200 bg-gray-50 transition hover:border-amber-200 hover:bg-amber-50" do %>
                    <svg class="h-5 w-5 text-slate-500" width="20" height="20" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                      <path stroke="none" d="M0 0h24v24H0z"/>
                      <path d="M4 20h4l10.5 -10.5a1.5 1.5 0 0 0 -4 -4l-10.5 10.5v4" />
                      <line x1="13.5" y1="6.5" x2="17.5" y2="10.5" />
                    </svg>
                  <% end %>
                  <%= link_to daily_record_path(record),
                        data: { turbo_method: :delete, turbo_confirm: t("daily_records.index.table.actions.delete_confirm") },
                        aria: { label: t("daily_records.index.table.actions.delete") },
                        class: "inline-flex h-8 w-8 items-center justify-center rounded-full border border-gray-200 bg-gray-50 transition hover:border-amber-200 hover:bg-amber-50" do %>
                    <svg class="h-5 w-5 text-slate-500" width="20" height="20" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                      <path stroke="none" d="M0 0h24v24H0z"/>
                      <line x1="4" y1="7" x2="20" y2="7" />
                      <line x1="10" y1="11" x2="10" y2="17" />
                      <line x1="14" y1="11" x2="14" y2="17" />
                      <path d="M5 7l1 12a2 2 0 0 0 2 2h8a2 2 0 0 0 2 -2l1 -12" />
                      <path d="M9 7v-3a1 1 0 0 1 1 -1h4a1 1 0 0 1 1 1v3" />
                    </svg>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <p class="mt-8 rounded-2xl border border-dashed border-amber-200 bg-amber-50 px-6 py-8 text-center text-sm text-amber-800">
      <%= t("daily_records.index.empty_message") %>
    </p>
  <% end %>
</section>

<%= render "shared/back_home_button", path: mypage_path, label: t("common.back_to_mypage") %>
